{# static metatag - each page #}
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<meta charset="UTF-8">

<base href="{{ website_url|default('https://thatsmy.name/findmyplace/') }}">

{# dynamic metatags - customize for each page #}
<title>{{ page.title|default('Find My Place') }}</title>

<link rel="apple-touch-icon" sizes="180x180" href="app/assets/icons/apple-touch-icon.png">
<link rel="icon" type="image/png" href="app/assets/icons/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="app/assets/icons/favicon-16x16.png" sizes="16x16">
<link rel="manifest" href="app/assets/icons/manifest.json">
<link rel="mask-icon" href="app/assets/icons/safari-pinned-tab.svg" color="#5bbad5">
<link rel="shortcut icon" href="app/assets/icons/favicon.ico">
<meta name="msapplication-config" content="app/assets/icons/browserconfig.xml">
<meta name="theme-color" content="#ffffff">

{% for item in metatags %}
	{% if item.kind == "link" %}
		<link href="{{ item.href }}" rel="{{ item.rel }}" type="{{ item.type }}" media="all">
	{% else %}
		<meta name="{{ item.name }}" content="{{ item.content }}">
	{% endif %}
{% endfor %}


{% for item in head_extra_script %}
	<script src="{{ item.link }}" {% if item.async %}async{% endif %}></script>
{% endfor %}


{% for item in import_extra_html %}
	<link rel="import" href="{{ item }}">
{% endfor %}
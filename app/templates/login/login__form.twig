{% set form_action = form_action ?: "" %}

<style type="text/css">
.form_login { display: block; max-width: 400px }
.form_login li { list-style: none; margin-top: 20px; display: block }
.form_login input { vertical-align: middle; border: 1px solid #000; }
.form_login label { line-height: 35px; display: inline-block; }
.form_login input[type=email],
.form_login input[type=password] { height: 35px; line-height: 35px; padding: 0px 5px; float: right; }
.form_login input[type=submit] { background-color: #fff; border: 1px solid #cf2a26; color: #cf2a26; transition: all 300ms; padding: 5px 10px }
.form_login input[type=submit]:hover { background-color: #cf2a26; color: #fff }
.form_login li.form_footer { margin-top: 50px }
.form_login li.form_footer a { color: black }
</style>


<form class="form_login" action="{{ form_action }}" method="post">

    {% if not loginOk %}

        <li>
            <p class="c_red">Account not found, check the inputs data</p>
        </li>

    {% endif %}

    <li>
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="example@example.com" value="{{ login_data.email }}" required/>
    </li>
    
    <li>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required/>
    </li>

    {#
    <li style="list-style: none">
        <label style="cursor: pointer;">
            <input type="checkbox" name="permalogin" value="y" checked="checked" />stay logged in
        </label>
    </li>
    #}
    
    <li style="text-align:center">

            <input type="submit" name="login" value="Login" />
        {#<p>
            <a class="form_input--forgot_password form_pretty_button_link" href="../resetpassword/" target="_blank">Forgot Password</a>
        </p>#}
    </li>
    
    <li class="form_footer">
        <p>New user? <a href="register/">Register</a></p>
    </li>

</form>